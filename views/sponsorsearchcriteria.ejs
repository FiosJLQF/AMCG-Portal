<div>
    <div class="bodylayout1col1title" id="searchCriteriaTitle">Search Criteria</div>
    <hr class="bodycol1break">
    <div class="searchInstructions">Enter search criteria below and click "search".</div><br>

    <!-- Keyword(s) -->
    Keyword(s): <button type="button" class="btn btn-default button-small"
        onclick="toggleSearchCriteriaInputBlock(
            document.querySelector('#filterKeywordsIcon'),
            document.querySelector('#filterKeywordsInputBlock'),
            document.querySelector('#filterKeywordsInput'), '')">
        <i id="filterKeywordsIcon" class="fas fa-chevron-down expand-filter chevrons"></i>
    </button><br>
    <div id="filterKeywordsInputBlock" class="filter-input-block">
        <div class="searchInstructions">(Separate words/phrases with commas)</div>
        <input type="text" id="filterKeywordsInput" class="filter-input filter_textbox"><br>
    </div>

    <!-- Sponsor Name(s) -->
    Sponsor(s): <button type="button" class="btn btn-default button-small"
        onclick="toggleSearchCriteriaInputBlock(
            document.querySelector('#filterSponsorNamesIcon'),
            document.querySelector('#filterSponsorNamesInputBlock'),
            document.querySelector('#filterSponsorNamesInput'), '')">
        <i id="filterSponsorNamesIcon" class="fas fa-chevron-down expand-filter chevrons"></i>
    </button><br>
    <div id="filterSponsorNamesInputBlock" class="filter-input-block">
        <div class="searchInstructions">&nbsp;&nbsp;&nbsp;(Press [ctrl] to select multiples.)</div>
        <select id="filterSponsorNamesInput" class="filter_select" multiple></select><br>
    </div>

    <!-- Sponsor Type(s) -->
    Sponsor Type(s): <button type="button" class="btn btn-default button-small"
        onclick="toggleSearchCriteriaInputBlock(
            document.querySelector('#filterSponsorTypeIcon'),
            document.querySelector('#filterSponsorTypeInputBlock'),
            document.querySelector('#filterSponsorTypeInput'), '')">
        <i id="filterSponsorTypeIcon" class="fas fa-chevron-down expand-filter chevrons"></i>
    </button><br>
    <div id="filterSponsorTypeInputBlock" class="filter-input-block">
        <div class="searchInstructions">&nbsp;&nbsp;&nbsp;(Press [ctrl] to select multiples.)</div>
        <select id="filterSponsorTypeInput" class="filter_select" multiple></select><br>
    </div>

<br>

    <div style="text-align:left">
        <button type="button" class="btn btn-default button-search" onclick="findMatchingSponsors(spaRows, 1);">
            <img src="/img/imgMagnifyingGlass.png" alt="Magnifying Glass" style="width:35px;" class="img-responsive">
            Search
        </button><br>
        <button type="button" class="btn btn-default button-small" onclick="buildSponsorSearchResults(spaRows, 1);">
            >> Show All Sponsors
        </button><br>
        <button type="button" class="btn btn-default button-small" onclick="clearSponsorSearchCriteria();">
            >> Reset Search
        </button>
    </div>

</div>

<script>

    // Load the Sponsor List into the DDL
    var splRows = <%- JSON.stringify(sponsorslist) %>;
    loadSelectOptionsList("filterSponsorNamesInput", "(Not Selected)", 0, splRows);

    // Load the Sponsor Type options into the DDL
    var spsRows = <%- JSON.stringify(sponsortypecategories) %>;
    loadSelectOptionsList("filterSponsorTypeInput", "(Not Selected)", 0, spsRows);

    // Load "all sponsors with scholarship information" into the "Search" button destinations
    var spaRows = <%- JSON.stringify(sponsorsallwithscholarshipinfo) %>;

</script>