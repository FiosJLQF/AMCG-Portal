<% layout('layouts/boilerplate') %>

<div class="container pagetitle" align="center">
  Sponsor Information
  <hr class="pagetitlebreak">
</div>

<!-- Flex Grid for Body -->
<div class="container">

  <!-- Search Options -->
  <div class="row">

    <!-- Left-hand Panel: Main Content Menu -->
    <%- include('partials/menu_main') %>

    <!-- Right-hand Panel: Content -->
    <div class="col-9 bodylayout1col2-datamgmt" id="scholarshipsearchresultscolumn">
      <span class="bodylayout1col2title" id="sponsorInstructions"><label>
        Edit the entries below, and click "Save Changes"</label></span><br>
      <hr class="bodycol2break"><br>
      <form action="" method="POST">
        <div>
            <label for="sponsorName" class="data-mgmt">Sponsor Name:</label>
            <input type="text" id="sponsorName" name="sponsor[SponsorName]" class="data-mgmt-text"
              value="<%= sponsorDetails[0].SponsorName %>">
        </div><br>
        <div>
            <label for="sponsorDescription" class="data-mgmt">Description:</label>
            <textarea id="sponsorDescription" name="sponsor[SponsorDescription]" class="data-mgmt"><%= sponsorDetails[0].SponsorDescription %>
            </textarea> 
        </div><br>
        <div>
          <label for="sponsorWebsite" class="data-mgmt">Website:</label>
          <input type="text" id="sponsorWebsite" name="sponsor[SponsorWebsite]" class="data-mgmt-text" 
            value="<%= sponsorDetails[0].SponsorWebsite %>">
      </div><br>
      <div>
        <label for="sponsorNEXT" class="data-mgmt">...more items...</label>
        <input type="text" id="sponsorNEXT" name="sponsor[SponsorNEXT]" class="data-mgmt" 
          value="">
    </div><br>
    <button class="data-mgmt">Save Changes</button>&nbsp;&nbsp;&nbsp;&nbsp;<button class="data-mgmt">Delete This Sponsor</button>
      </form><br>
    </div>  <!-- End column 2 DIV  -->

  </div>    <!-- End row 1 DIV     -->

  <div class="row">
    <div id="switchboardsidemenu_footer" class="col-3 bodylayout1col1"></div>
    <div id="scholarshipsearchresultscolumn_footer" class="col-9 bodylayout1col2">
      <hr class="bodycol2break">
    </div>
  </div>    <!-- End row 2 DIV     -->
  
</div>      <!-- End container DIV -->